datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Inventory {
    id        String   @id
    name      String
    quantity  Int
    users     Users[]
}

model Users {
    id    String    @id
    blacklisted Boolean @default(false)
    inventory  Inventory[]
}

model Guilds {
    id    String    @id 
}

model Settings {
    id    String    @id
    prefix String
    economy Boolean @default(false)
    leveling Boolean @default(false)
}

model Cooldowns {
    id    String    @id
    commandName String
    createdAt DateTime @default(now())
    expiresAt DateTime 
}