{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "build",
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "#modules/*": ["modules/*"],
      "#utils/*": ["utils/*"]
    },
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}